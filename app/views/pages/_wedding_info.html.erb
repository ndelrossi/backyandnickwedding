<div id="wedding-info" class="section row">
  <div id="wedding-info-cover" class="section-cover"></div>
  <h1 class="text-center">Location</h1>

  <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center">
    <p><%= wedding.location['description'] %></p><br>
    <address>
      <%= wedding.location['name'] %><br>
      <%= wedding.location['street'] %><br>
      <%= wedding.city_and_state %> <%= wedding.location['zip'] %>
    </address><br>
  </div>
  <div id="gmap" class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <iframe
      height="300"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAT36hbpo_G0LGxnA3d6TPkT_Lv0-vMD30
        &q=<%= wedding.address_for_maps %>&zoom=13">
    </iframe>
  </div>
</div>

